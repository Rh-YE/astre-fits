{
  "name": "astre-fits",
  "displayName": "astre.fits",
  "description": "A Simple FITS File Viewer VSCode Extension",
  "version": "0.0.4",
  "publisher": "RenhaoYe",
  "repository": {
    "type": "git",
    "url": "https://github.com/Rh-YE/astre-fits"
  },
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Visualization"
  ],
  "activationEvents": [
    "onCustomEditor:astre-fits.fitsViewer",
    "onStartupFinished"
  ],
  "extensionKind": ["workspace", "ui"],
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true
    },
    "virtualWorkspaces": true
  },
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "astre-fits.helloWorld",
        "title": "Hello World"
      }
    ],
    "customEditors": [
      {
        "viewType": "astre-fits.fitsViewer",
        "displayName": "FITS 文件查看器",
        "selector": [
          {
            "filenamePattern": "*.fits"
          },
          {
            "filenamePattern": "*.fit"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.17.19",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3"
  }
}
